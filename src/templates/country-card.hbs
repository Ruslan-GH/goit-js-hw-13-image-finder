<div class="country">
    <div class="country-body">
        <h2 class="country-name">{{0.name}}</h2>
        <p class="country-title">Capital: <span class="country-text">{{0.capital}}</span></p>
        <p class="country-title">Population: <span class="country-text">{{0.population}}</span></p>
        <p class="country-title">Languages:</p>
        <ul class="country-text">
        {{#each 0.languages}}
            <li class="country-text-item">{{this.name}}</li>
        {{/each}}
        </ul>
    </div>
    <div class="country-img">
        <img src="{{0.flags.svg}}" alt="{{0.name}}" height="320" width="320">
    </div>
</div>